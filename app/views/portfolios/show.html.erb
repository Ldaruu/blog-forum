<div class="container portfolio-container">
	<div class="row">
		<div class="col-md-7">
			<%= image_tag  portfolio_img( @portfolio_item.main_image, 'main'), width:'100%', class:'portfolio-main-image' unless @portfolio_item.main_image.nil? %>
		</div>
		<div class="col-md-5">
			<h1><%= @portfolio_item.title %> </h1>

			<hr>

			<h3><%= @portfolio_item.subtitle %> </h3>
			<p><%= @portfolio_item.body %> </p>

			<hr>

			<h4>Technologies Used:</h4>
			<% @portfolio_item.technologies.each do |tech| %>
					<p><%= tech.name %></p>
			<% end %>

			<% if logged_in?(:site_admin) %>
			<%= link_to "Edit", edit_portfolio_path(@portfolio_item.id)  %>
			<%= link_to 'Delete', @portfolio_item, method: :delete, data: { confirm: 'Are you sure?' } %>
			<% end %>	
			
		</div>
	</div>
</div>